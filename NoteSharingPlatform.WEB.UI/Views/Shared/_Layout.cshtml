@using NoteSharingPlatform.ENTITY.Models

@{
    UserModel user = null;

    if (Session["login"] != null)
    {
        user = Session["login"] as UserModel;
    }
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Note Sharing Platform</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <style>
        #clearLink {
            color: white;
            text-decoration: none;
        }

            #clearLink:hover {
                color: gold;
            }
    </style>

</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">Note Sharing Platform</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Menü">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">

                <ul class="navbar-nav ">

                    @if (user != null)
                    {
                        <li class="">
                            <a class="" href="#">

                            </a>
                        </li>

                        <li class=" nav-item dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-cog"></i>
                                Yönetim Paneli
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="/Note/AddNew"> <i class="fa fa-plus"></i> Not Ekle</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Note/MyNotes"> <i class="fa fa-pencil-square-o"></i> Notlarım</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Note/MyLikedNotes"> <i class="fa fa-heart"></i> Beğendiklerim</a>
                                <div class="dropdown-divider"></div>

                                @if (user.IsAdmin)
                                {
                                    <a class="dropdown-item" href="/Category/AddNew"> <i class="fa fa-plus"></i> Kategori Ekle</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Category/List"> <i class="fa fa-list-ul"></i> Kategoriler</a>
                                }

                            </div>
                        </li>
                    }


                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MostLiked">
                            <i class="fa fa-heart"></i>
                            En Beğenilenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <i class="fa fa-list-ul"></i>
                            Son Yazılanlar
                        </a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">
                            <i class="fa fa-info-circle"></i>
                            Hakkımızda
                        </a>
                    </li>
                </ul>

                <div class="collapse navbar-collapse justify-content-end" id="navbarResponsive">
                    <ul class="navbar-nav justify-content-end ">

                        @if (user == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/User/Login">
                                    <i class="fa fa-sign-in"></i>
                                    Giriş
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/User/Register">
                                    <i class="fa fa-plus"></i>
                                    Üye Ol
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/UserProfile/ShowProfile">
                                    <i class="fa fa-user-circle"></i>
                                    @user.Username
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/User/Logout">
                                    <i class="fa fa-sign-out"></i>
                                    Çıkış
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>

        </div>
    </nav>

    @RenderBody()

    <!-- Footer -->
    @RenderSection("footer", required: false)
    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
